@model HomeListDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-6 order-1 order-lg-2" data-aos="zoom-in" data-aos-delay="100">
                    <div class="about-img">
                        <img src="~/Restaurantly/assets/img/about.jpg" alt="">
                    </div>
                </div>
                @foreach (var about in Model.Abouts)
                {
                    <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                        <h3>@about.Title</h3>
                        <p class="fst-italic">
                            @about.Description
                        </p>
                    </div>
                }

            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Why Us Section ======= -->
    <!-- ======= Menu Section ======= -->
    <section id="menu" class="menu section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>MENU</h2>
                <p>Bizim Lezzetli Menülerimiz</p>
            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="menu-flters">
                        <li data-filter="*" class="filter-active">Tatlı</li>
                        <li data-filter=".filter-starters">Çorba</li>
                        <li data-filter=".filter-salads">Ana Yemek</li>
                        <li data-filter=".filter-salads">Salata</li>
                        <li data-filter=".filter-specialty">Özel</li>
                    </ul>
                </div>
            </div>

            <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">

                @foreach (var menu in Model.Menus)
                {
                    <div class="col-lg-6 menu-item filter-starters">
                        <img src="@menu.Picture" class="menu-img" alt="">
                        <div class="menu-content">
                            <a href="#">@menu.Name</a><span>@menu.Price ₺</span>
                        </div>
                        <div class="menu-ingredients">
                            @menu.Description
                        </div>
                    </div>

                }


            </div>

        </div>
    </section><!-- End Menu Section -->
    <!-- ======= Specials Section ======= -->
    <section id="specials" class="specials">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Özel</h2>
                <p>Özel Ürünlerimizi Kontrol Edin</p>
            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="100">
                @foreach (var special in Model.Specials)
                {

                    <div class="col-lg-3">
                        <ul class="nav nav-tabs flex-column">

                            <li class="nav-item">
                                <a class="nav-link active show" data-bs-toggle="tab" href="#tab-@special.Id">@special.Name</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-9 mt-4 mt-lg-0">
                        <div class="tab-content">

                            <div class="tab-pane active show" id="tab-@special.Id">
                                <div class="row">
                                    <div class="col-lg-8 details order-2 order-lg-1">
                                        <h3>@special.Title</h3>
                                        <p>@special.Description</p>
                                    </div>
                                    <div class="col-lg-4 text-center order-1 order-lg-2">
                                        <img src="@special.Picture" alt="" class="img-fluid">
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                }
            </div>

        </div>
    </section><!-- End Specials Section -->
    <!-- ======= Testimonials Section ======= -->
    <section id="testimonials" class="testimonials section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Hakkımızda</h2>
                <p>Bizim Hakkımızda Söylenilenler</p>
            </div>

            <div class="testimonials-slider swiper-container" data-aos="fade-up" data-aos-delay="100">
                <div class="swiper-wrapper text-center">

                    @foreach (var item in Model.Testimonials)
                    {
                        <div class="testimonial-item">
                            <p>
                                <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                @item.Description
                                <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                            </p>
                            <img src="~/Restaurantly/assets/img/testimonials/testimonials-1.jpg" class="testimonial-img" alt="">
                            <h3>@item.AppUser.FirstName @item.AppUser.SurName</h3>
                            <h4>@item.AppUser.Job</h4>
                        </div>
                    }
                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Testimonials Section -->
    <!-- ======= Gallery Section ======= -->
    <section id="chefs" class="chefs">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Şefler</h2>
                <p>Bizim Profosyonel Şeflerimiz</p>
            </div>

            <div class="row">
                @foreach (var chef in Model.Chefs)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="member" data-aos="zoom-in" data-aos-delay="100">
                            <img src="@chef.Picture" class="img-fluid" alt="">
                            <div class="member-info">
                                <div class="member-info-content">
                                    <h4>@chef.Name</h4>
                                    <span>@chef.Job</span>
                                </div>
                                <div class="social">
                                    <a href="#"><i class="bi bi-twitter"></i></a>
                                    <a href="#"><i class="bi bi-facebook"></i></a>
                                    <a href="#"><i class="bi bi-instagram"></i></a>
                                    <a href="#"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>

        </div>
    </section><!-- End Chefs Section -->

</main><!-- End #main -->
