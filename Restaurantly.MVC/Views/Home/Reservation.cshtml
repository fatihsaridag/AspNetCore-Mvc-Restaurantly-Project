@model ReservationAddDto
@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="book-a-table" class="book-a-table">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Rezervasyon</h2>
            <p>Bir Masa Rezervasyonu</p>
        </div>

        <form asp-action="Reservation" method="post" role="form" class="php-email-form" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-4 col-md-6 form-group">
                    <input type="text" name="name" class="form-control" id="name" placeholder="Adınız" asp-controller="Home" asp-action="Reservation" asp-for="Name">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control" placeholder="Emailiniz" asp-controller="Home" asp-action="Reservation" asp-for="Email" >
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3 mt-md-0">
                    <input type="number" class="form-control" placeholder="Telefonunuz" asp-controller="Home" asp-action="Reservation" asp-for="Phone">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="date" name="date" class="form-control" id="date" placeholder="Tarih" asp-controller="Home" asp-action="Reservation" asp-for="Date">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="number" class="form-control"  placeholder="Saat" asp-controller="Home" asp-action="Reservation" asp-for="Time">
                    <div class="validate"></div>
                </div>
                <div class="col-lg-4 col-md-6 form-group mt-3">
                    <input type="number" class="form-control"  placeholder="Kaç Kişi" asp-controller="Home" asp-action="Reservation" asp-for="Count">
                    <div class="validate"></div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="text" class="form-control"  placeholder="Mesaj" asp-controller="Home" asp-action="Reservation" asp-for="Message">
                <div class="validate"></div>
            </div>
            <div class="mb-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Rezervasyon talebiniz gönderildi. Rezervasyonunuzu onaylamak için geri arayacağız veya bir e-posta göndereceğiz.Teşekkürler</div>
            </div>
            <div class="text-center"><button type="submit">Rezervasyonb Oluştur</button></div>
        </form>

    </div>
</section><!-- End Book A Table Section -->
