@model PasswordResetViewModel


@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


@if (ViewBag.status == "success")
{
    <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="alert alert-info text-center">Şifreniz başarıyla yenilenmiştir.Giriş sayfasından yeni şifreniz ile giriş yapabilirsiniz</div>
            <a class="btn btn-link" asp-action="SignIn" asp-controller="Home">Giriş için tıklayınız</a>
        </div>
        <div class="col-md-3"></div>
    </div>
}
else
{
    <div class="row mt-5">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1 class="text-center text-info">Şifre Yenileme Formu</h1>
            <form method="post" asp-action="ResetPasswordConfirm" asp-controller="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-outline-primary form-control">Kaydet</button>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>

    </div>

}