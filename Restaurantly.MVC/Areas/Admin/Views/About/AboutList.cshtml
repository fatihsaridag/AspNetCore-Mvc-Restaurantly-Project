@model AboutListDto


@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

 


<table class="table table-bordered table-striped mt-4 ">
    <h3 class="text-primary text-center mt-3"> Hakkımızda </h3>
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklaması</th>
            <th>Resmi</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Abouts)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Image</td>
                <td><a asp-area="Admin" asp-controller="About" asp-action="AboutEdit" asp-route-id="@item.Id" class="btn btn-outline-primary">Hakkımızdayı Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

