@model Restaurantly.MVC.Models.RoleViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
 

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <form method="post" asp-action="RoleCreate">
                <h3 class="text text-danger text-center">Rol Oluşturma</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group-0 text-center  mt-2">
                    <input type="submit" value="Rol Oluştur" class="btn btn-outline-primary form-control" />
                </div>
            </form>
        </div>

        <div class="col-md-4">
        </div>

    </div>

</div>
