@model List<AppRole>

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (ViewBag.status == "true")
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="alert alert-danger"> Herhangi bir rol bulunamadı </div>
                <td><a asp-area="Admin" asp-action="RoleCreate" asp-controller="User" class="btn btn-outline-success">Rol Oluştur</a></td>
            </div>
            <div class="col-md-3"></div>
        </div>

    </div>
}
else
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
            </div>

            <div class="col-md-8">

                <table class="table table-bordered table-striped">
                    <h3 class="text text-danger text-center "> Rol Yönetim İşlemleri</h3>
                    <tr>
                        <th>Rol İsmi</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                        </tr>
                    }

                </table>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
}



